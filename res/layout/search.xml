<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/space"
        android:text="@string/item_location"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_middle" />

    <TextView
            android:id="@+id/display_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_middle" 
            android:padding="@dimen/space"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/search_keyword"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_middle"
            android:padding="@dimen/space" />

        <EditText
            android:id="@+id/key_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/search_key_hint" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/search_module"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_middle"
            android:padding="@dimen/space" />

        <Spinner
            android:id="@+id/module"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/search_distance"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_middle" />

        <SeekBar
            android:id="@+id/distance"
            android:layout_width="180dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/display_distance"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text=""
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_small" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:text="公里"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_small" />
    </LinearLayout>

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/search"
        android:text="@string/search_go"
        android:layout_width="@dimen/one_line_width"
        android:layout_height="@dimen/one_line_height"
        android:layout_gravity="center"
        android:background="@color/red"
        android:padding="@dimen/space"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_middle"  />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小贴士:"
        android:textSize="@dimen/text_small"
        android:textColor="@color/text_color"
         />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search_tips"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_middle" />

</LinearLayout>